@model IEnumerable<SchoolManagement.Models.Enrollment>
 @{
     ViewBag.Title = "UpdateGrade";
     Layout = "~/Views/Shared/_INSLayout.cshtml";
 }
@if (Session["Right"] != null)  
{
    <span>@Html.ActionLink("Schedual", "Index", "Schedual")</span>
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        Select Semester:@Html.DropDownList("SelectedSemester", ViewBag.SelectedSemester as SelectList, "All", new { @class = "form-control" })
        <input type="submit" value="Filter" class="btn btn-primary pull-right btn-sm" />
    </div>
}
    <table class="table">
    <tr>
        <th>CourseID</th>
        <th>Title</th>
        <th>Credits</th>
        <th>StudentID</th>
        <th>Student</th>
        <th>Grade</th>
        <th></th>
    </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Credits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.ActionLink("Edit Grade", "EditGrade", new { id = item.EnrollmentID })     
                </td>
            </tr>
            }
   </table>

